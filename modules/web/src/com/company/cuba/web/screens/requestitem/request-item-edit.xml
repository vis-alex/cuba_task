<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://requestItemEdit.caption"
        focusComponent="form"
        messagesPack="com.company.cuba.web.screens.requestitem">
    <data>
        <instance id="requestItemDc"
                  class="com.company.cuba.entity.RequestItem">
            <view extends="_local">
                <property name="product" view="_minimal">
                    <property name="cost"/>
                </property>
                <property name="request" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="requestItemDc">
            <column width="350px">
                <pickerField id="productField" property="product">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="volumeField" property="volume"/>
                <pickerField id="requestField" property="request">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
