<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://requestBrowse.caption"
        focusComponent="table"
        messagesPack="com.company.cuba.web.screens.request">
    <data>
        <collection id="requestsDc"
                    class="com.company.cuba.entity.Request">
            <view extends="_local">
                <property name="customer" view="_minimal">
                    <property name="city"/>
                </property>
                <property name="supplier" view="_minimal"/>
            </view>
            <loader id="requestsDl">
                <query>
                    <![CDATA[select e from cuba_Request e]]>
                </query>
            </loader>
        </collection>
        <instance id="requestDc"
                  class="com.company.cuba.entity.Request">
            <view extends="_local">
                <property name="customer" view="_minimal">
                    <property name="city"/>
                </property>
                <property name="supplier" view="_minimal"/>
                <property name="items" view="_minimal">
                    <property name="product" view="_minimal">
                        <property name="cost"/>
                    </property>
                    <property name="volume"/>
                </property>
            </view>
            <loader/>
            <collection id="itemsDc" property="items"/>
        </instance>
    </data>
    <actions>
        <action id="save" icon="icons/ok.png" caption="mainMsg://actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" icon="icons/cancel.png" caption="mainMsg://actions.Cancel" description="Esc"/>
    </actions>
    <dialogMode height="600" width="800"/>
    <layout>
        <split id="split" height="100%" orientation="horizontal" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false" spacing="true">
                <filter id="filter" applyTo="table" dataLoader="requestsDl">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%"
                            dataContainer="requestsDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="customer"/>
                        <column id="supplier"/>
                    </columns>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="table.create"/>
                        <button id="editBtn" action="table.edit"/>
                        <button id="removeBtn" action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
                <hbox id="lookupActions" spacing="true" visible="false">
                    <button action="lookupSelectAction"/>
                    <button action="lookupCancelAction"/>
                </hbox>
            </vbox>
            <vbox id="editBox" height="100%" margin="false,false,false,true" expand="tabSheetBox" spacing="true">
                <vbox id="tabSheetBox">
                    <tabSheet id="tabSheet" height="100%">
                        <tab id="mainTab" caption="msg://request.editorMainTab.caption" margin="true">
                            <scrollBox id="fieldGroupBox"
                                       height="100%">
                                <form id="form" dataContainer="requestDc">
                                    <column width="350px">
                                        <pickerField id="customerField" property="customer">
                                            <actions>
                                                <action id="lookup" type="picker_lookup"/>
                                                <action id="clear" type="picker_clear"/>
                                            </actions>
                                        </pickerField>
                                        <pickerField id="supplierField" property="supplier">
                                            <actions>
                                                <action id="lookup" type="picker_lookup"/>
                                                <action id="clear" type="picker_clear"/>
                                            </actions>
                                        </pickerField>
                                    </column>
                                </form>
                            </scrollBox>
                        </tab>
                        <tab id='itemsTab' caption='msg://com.company.cuba.entity/Request.items'
                             margin='true,false,false,false'>
                            <table id="itemsTable" dataContainer="itemsDc" width="100%" height="200px">
                                <actions>
                                    <action id="create" type="create"/>
                                    <action id="edit" type="edit"/>
                                    <action id="remove" type="remove"/>
                                </actions>
                                <columns>
                                    <column id="product"/>
                                    <column id="volume"/>
                                </columns>
                                <buttonsPanel>
                                    <button action="itemsTable.create"/>
                                    <button action="itemsTable.edit"/>
                                    <button action="itemsTable.remove"/>
                                </buttonsPanel>
                            </table>
                        </tab>
                    </tabSheet>
                </vbox>
                <hbox id="actionsPane" spacing="true" visible="false">
                    <button id="saveBtn" action="save"/>
                    <button id="cancelBtn" action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
